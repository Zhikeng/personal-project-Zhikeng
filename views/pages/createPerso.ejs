<%- include('../partials/head') -%>

  <%- include('../partials/navbar') -%>

    <!-- content -->
    <main>
      <!-- <div class="layout"> -->
      <div class="content">
        <h1>REGISTRATION FORM</h1>
        <form action="/perso" method="POST" class="form">
          <label for="firstName">Enter your first name: <input id="firstName" name="firstName" type="text"
              placeholder="first name" minlength="1" required></label>
          <label for="lastName">Enter your last name: <input id="lastName" name="lastName" type="text"
              placeholder="last name" minlength="1" required></label>
          <label for="email">Enter your email address: <input id="email" name="email" type="email" placeholder="email"
              required></label>
          <label for="age">Input your age(years): <input id="age" type="number" name="age" min="15" max="120"
              placeholder="age" required></label>
          <label for="address">Enter your postal address: <input id="address" type="text" name="address"></label>
          <label for="purpose">Why do I come to this website?
            <select id="purpose" name="purpose" required>
              <option selected disabled>Select one</option>
              <option>Find information</option>
              <option>Share information</option>
              <option>Exchange with people</option>
              <option>Seek help</option>
              <option>Other</option>
            </select>
          </label>
          <label for="bio">Provide your biography: <textarea id="bio" name="bio" rows="3" cols="30"
              placeholder="..."></textarea>
          </label>
          <label for="termsAndConditions"><input id="termsAndConditions" type="checkbox" required
              name="termsAndConditions" class="inline">I accept the <a href="#">terms and conditions</a></label>
          <div>
            <input type="submit" value="Submit" class="form-button" onclick="infoRegister()" />
          </div>

        </form>
        <p>You had registered for this form</p>
        <span><button class="add-button"><a href="./create-res">GO TO THE SURVEY</a></button></span>
        <span><button class="logout-button"><a href="/logout/">LOGOUT</a></button></span>
      </div>
      <!-- </div> -->
    </main>
    <script>
      function infoRegister() {
        let firstname = document.getElementById("firstName").value;
        alert(`Thank you ${firstname}, now we are heading to the survey!`);
      }
    </script>

    <%- include('../partials/footer') -%>